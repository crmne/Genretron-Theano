# This is the default config file for Genretron.

[Input]
AudioFolder: /path/to/audio

[Spectrogram]
WindowSize: 1024
StepSize: 512
# Can be square, hamming, hanning, bartlett or blackman
WindowType: square
FFTResolution: 1024

[Tracks]
# TODO: some tracks are not exactly 30 seconds
LengthInSeconds: 29
SampleRate: 22050
BitsPerSample: 16
Channels: 1

[Preprocessing]
ListsFolder: /path/to/lists
FeaturesFolder: /path/to/features
NumberOfFolds: 10
NumberOfSongsPerGenre: 10
TrainValidationRatio: 0.8

[Output]
OutputFolder: /path/to/output
Plot: Yes
SaveBestModel: Yes
SavePlot: Yes

[Model]
# Can be LinearRegression or MultiLayerPerceptron
Model: LinearRegression
NumberOfEpochs: 5000

# Can be Sigmoid or ReLU
OutputLayer: Sigmoid
BatchSize: 200

# Can be a number or None for random seed
Seed: 1
LearningRate: 0.002

[LearningRateUpdate]
# Can be Exponential or Annealed
UpdateType: Exponential
BeginAnneal: 500
MinimumLearningRate: 0.00001
DecayFactor: 1.0005

[LinearRegression]

[MultiLayerPerceptron]
# One number per hidden layer, separated by spaces
NumberOfNeuronsPerHiddenLayer: 50 50 50

# One number per hidden layer, separated by spaces
DropoutRatePerHiddenLayer: 0.5 0.5 0.5

# Can be Sigmoid or ReLU
Activation: Sigmoid

[Momentum]
# Can be Yes or No
UseMomentum: Yes
MomentumRate: 0.1
